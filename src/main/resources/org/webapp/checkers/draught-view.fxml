<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<VBox alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.webapp.checkers.controllers.DraughtsController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <!-- Title Label -->
    <Label text="Draughts Game" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

    <!-- Game Board -->
    <GridPane fx:id="boardPane" alignment="CENTER">
        <!-- The boardPane will be dynamically populated with Tiles in the controller -->
    </GridPane>

    <!-- Button to reset the game or perform other actions -->
    <Button text="Restart Game" onAction="#restartGame" style="-fx-font-size: 16px;"/>

    <!-- Additional UI elements like status labels or timers can be added here -->
    <Label fx:id="statusLabel" text="Player 1's Turn" style="-fx-font-size: 18px;"/>
</VBox>
